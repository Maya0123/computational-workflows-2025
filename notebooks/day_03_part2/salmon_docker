FROM debian:bullseye-slim

LABEL image.author.name="yourname"
LABEL image.author.email="yourmail"

# Install dependencies
# Download and install Salmon

RUN apt-get update && apt-get install -y     curl     tar     gzip     && rm -rf /var/lib/apt/lists/*

RUN curl -L https://github.com/COMBINE-lab/salmon/releases/download/v1.5.2/salmon-1.5.2_linux_x86_64.tar.gz     | tar -xz -C /opt     && ln -s /opt/salmon-1.5.2_linux_x86_64/bin/salmon /usr/bin/salmon

# Set the PATH environment variable (to /usr/bin)

ENV PATH="/usr/bin:${PATH}"

CMD ["salmon", "--version"]